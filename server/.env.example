# Database
DATABASE_URL="file:./prisma/novels.db"

# Server
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Provider Configuration
DEFAULT_AI_PROVIDER=openai

# OpenAI API (or OpenAI-compatible)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# OpenAI Request Parameters
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# OpenAI Task-specific Parameters
OPENAI_CONSISTENCY_TEMPERATURE=0.3
OPENAI_CONSISTENCY_MAX_TOKENS=1500
OPENAI_CREATIVE_TEMPERATURE=0.9
OPENAI_CREATIVE_MAX_TOKENS=3000
OPENAI_ANALYSIS_TEMPERATURE=0.2
OPENAI_ANALYSIS_MAX_TOKENS=2000

# OpenAI Retry and Timeout Configuration
OPENAI_RETRY_ATTEMPTS=3
OPENAI_BACKOFF_MULTIPLIER=2
OPENAI_INITIAL_DELAY=1000
OPENAI_TIMEOUT=60000

# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7
CLAUDE_RETRY_ATTEMPTS=3
CLAUDE_BACKOFF_MULTIPLIER=2
CLAUDE_INITIAL_DELAY=1000
CLAUDE_TIMEOUT=60000

# Custom Provider (OpenAI-compatible)
# CUSTOM_PROVIDER_NAME=my-custom-provider
# CUSTOM_API_KEY=your_custom_api_key_here
# CUSTOM_BASE_URL=https://your-custom-api.com/v1
# CUSTOM_MODEL=your-custom-model
# CUSTOM_TEMPERATURE=0.7
# CUSTOM_MAX_TOKENS=2000

# AI Global Configuration
AI_LOG_LEVEL=info
AI_ENABLE_CACHE=false
AI_CACHE_TTL=3600
AI_ENABLE_USAGE_STATS=true

# CORS settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# Logging configuration
LOG_LEVEL=debug