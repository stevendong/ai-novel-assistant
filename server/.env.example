# Database
DATABASE_URL="file:./novels.db"
# LOCAL_DATABASE_URL=postgresql://noveluser:changeme@localhost:5432/novel_db?schema=public  # 开发环境本地数据库覆盖项

# Server
PORT=3001
NODE_ENV=development
# TRUST_PROXY=loopback,linklocal,uniquelocal  # 反向代理信任配置，避免设置为 true

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Provider Configuration
DEFAULT_AI_PROVIDER=openai

# OpenAI API (or OpenAI-compatible)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# OpenAI Request Parameters
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# OpenAI Task-specific Parameters
OPENAI_CONSISTENCY_TEMPERATURE=0.3
OPENAI_CONSISTENCY_MAX_TOKENS=1500
OPENAI_CREATIVE_TEMPERATURE=0.9
OPENAI_CREATIVE_MAX_TOKENS=3000
OPENAI_ANALYSIS_TEMPERATURE=0.2
OPENAI_ANALYSIS_MAX_TOKENS=2000

# OpenAI Retry and Timeout Configuration
OPENAI_RETRY_ATTEMPTS=3
OPENAI_BACKOFF_MULTIPLIER=2
OPENAI_INITIAL_DELAY=1000
OPENAI_TIMEOUT=60000

# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7
CLAUDE_RETRY_ATTEMPTS=3
CLAUDE_BACKOFF_MULTIPLIER=2
CLAUDE_INITIAL_DELAY=1000
CLAUDE_TIMEOUT=60000

# Gemini API (Google)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# Gemini Task-specific Parameters
GEMINI_CONSISTENCY_TEMPERATURE=0.3
GEMINI_CONSISTENCY_MAX_TOKENS=1500
GEMINI_CREATIVE_TEMPERATURE=0.9
GEMINI_CREATIVE_MAX_TOKENS=4096
GEMINI_ANALYSIS_TEMPERATURE=0.2
GEMINI_ANALYSIS_MAX_TOKENS=2048
GEMINI_CONTENT_TEMPERATURE=0.8
GEMINI_CONTENT_MAX_TOKENS=8192

# Gemini Retry and Timeout Configuration
GEMINI_RETRY_ATTEMPTS=3
GEMINI_BACKOFF_MULTIPLIER=2
GEMINI_INITIAL_DELAY=1000
GEMINI_TIMEOUT=60000

# Custom Provider (OpenAI-compatible)
CUSTOM_PROVIDER_NAME=my-custom-provider
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_BASE_URL=https://your-custom-api.com/v1
CUSTOM_MODEL=your-custom-model
CUSTOM_TEMPERATURE=0.7
CUSTOM_MAX_TOKENS=2000

# AI Global Configuration
AI_LOG_LEVEL=info
AI_ENABLE_CACHE=false
AI_CACHE_TTL=3600
AI_ENABLE_USAGE_STATS=true

# CORS settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# Logging configuration
LOG_LEVEL=debug

# Cloudflare R2 Storage Configuration
CLOUDFLARE_R2_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=ai-novel-assistant
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Optional: R2 Public Domain (for direct access)
CLOUDFLARE_R2_PUBLIC_DOMAIN=your_bucket_public_domain.com

# Optional: CDN Domain (for faster access)
CLOUDFLARE_R2_CDN_DOMAIN=your_cdn_domain.com

# Mem0 Memory Service Configuration
MEM0_ENABLED=true
MEM0_API_KEY=your_mem0_api_key_here
MEM0_BASE_URL=https://api.mem0.ai
MEM0_TIMEOUT=5000
MEM0_RETRIES=3
MEM0_FALLBACK_ENABLED=true
MEM0_LOG_LEVEL=info
